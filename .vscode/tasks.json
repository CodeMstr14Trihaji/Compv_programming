{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile C++",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++14",
				"./${workspaceFolderBasename}/${fileBasename}",
				"-o",
				"./bin/${fileBasenameNoExtension}.exe"
			]
		},
		{
			"label": "Run Program",
			"type": "shell",
			"command": "./bin/${fileBasenameNoExtension}.exe",
			"dependsOn": ["Compile C++"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}